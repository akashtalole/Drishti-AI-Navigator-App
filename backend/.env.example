# ============================================================================
# AWS Configuration
# ============================================================================

# AWS Credentials (required)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Region (default region for all services)
AWS_REGION=us-west-2

# ============================================================================
# Nova Sonic Voice Configuration
# ============================================================================

# Voice Provider: "nova_sonic" (AWS Bedrock) or "polly" (fallback)
VOICE_PROVIDER=nova_sonic

# Nova Sonic Region (optional - if not set, uses AWS_REGION)
# This allows you to use a different region specifically for Nova Sonic
# if it's not available in your primary AWS_REGION
NOVA_SONIC_REGION=us-west-2

# Nova Sonic Model ID
# For us-west-2: amazon.nova-sonic-v1:0
# For cross-region: us.amazon.nova-sonic-v1:0
VOICE_MODEL=amazon.nova-sonic-v1:0

# ============================================================================
# Nova Act Configuration (Browser Automation)
# ============================================================================

# Nova Act API Key (optional - for Nova Act browser automation)
NOVA_ACT_API_KEY=

# ============================================================================
# Application Configuration
# ============================================================================

# Database URL (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/order_automation

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend Port
PORT=8000

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================================================
# S3 Configuration (for session replays)
# ============================================================================

# S3 Bucket for session recordings
SESSION_REPLAY_S3_BUCKET=your-bucket-name
SESSION_REPLAY_S3_PREFIX=session-replays/

# ============================================================================
# Security Configuration
# ============================================================================

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# ============================================================================
# Logging Configuration
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Performance Configuration
# ============================================================================

# Maximum concurrent orders
MAX_CONCURRENT_ORDERS=5

# Browser session timeout (seconds)
BROWSER_SESSION_TIMEOUT=3600

# Processing timeout (seconds)
PROCESSING_TIMEOUT=1800
